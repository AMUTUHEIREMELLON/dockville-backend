doctype html
head
  title Sign Up Form
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' type='text/css' href='/css/register.css')
.container
  form#formId(name='register' action='/api/register' onsubmit='return Validate()' method='POST')
    h2 Sign Up Form
    .form-group
      label(for='firstname') Firstname:
      input#firstname(type='text' name='firstname')
      span#firstnameError
    .form-group
      label(for='lastname') Lastname:
      input#lastname(type='text' name='lastname')
      span#lastnameError
    .form-group
      label(for='username') User Name:
      input#username(type='text' name='username')
      span#usernameError
    .form-group
      label(for='phonenumber') Phone Number:
      input#phonenumber(type='tel' name='phonenumber')
      span#phonenumberError
    .form-group
      label(for='email') Email:
      input#email(type='email' name='email')
      span#emailError
    .form-group
      label(for='sex') Sex:
      select#sex(name='sex')
        option(value='') Select
        option(value='male') Male
        option(value='female') Female
      span#qnameError
    .form-group 
      label.form-label(for='role') Role
      select(name='role') 
        option(value='') Select role
        option(value='director') Director 
        option(value='manager') Manager 
    label.form-label(for='section') Section
      select(name='section')  
        option(value='') Choose section
        option(value='parking') Parking 
        option(value='battery') battery 
        option(value='tireclinic') Tire Clinic
    .form-group
      label(for='password') Create Password:
      input#password(type='password' name='password')
      span#passwordError
    .form-group
      label(for='confirm-password') Confirm Password:
      input#confirm-password(type='password' name='confirm-password')
      span#cnameError
    .form-group
      button(type='submit' onsubmit='services.html') Sign Up
      br
script(src='/js/register-validation.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
