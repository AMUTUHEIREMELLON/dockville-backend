doctype html
head
  title Sign Up Form
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' type='text/css' href='/css/register.css')
h1(style='color: darkgreen') DOCKVILLE DAY AND NIGHT PARKING
nav.navbar.navbar-expand-lg.bg-body-tertiary
  .container-fluid
    a.navbar-brand(href='#') Navbar
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='./index.html') Home
        li.nav-item
          a.nav-link(href='#') About us
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
            | Section
          ul.dropdown-menu
            li
              a.dropdown-item(href='./parking.html') Parking
            li
              a.dropdown-item(href='./clinic.html') Tire Clinic 
            li
              hr.dropdown-divider
            li
              a.dropdown-item(href='./clinic.html') Battery Section
      form.d-flex(role='search')
        input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
        button.btn.btn-outline-success(type='submit')
          | Search
.container
  form#formId(name='register' action='#' onsubmit='return Validate()' method='POST')
    h2 Sign Up Form
    .form-group
      label(for='firstname') Firstname:
      input#firstname(type='text' name='firstname')
      // all inputs should have names in lowercase
      span#firstnameError
    .form-group
      label(for='lastname') Lastname:
      input#lastname(type='text' name='lastname')
      // all inputs should have names in lowercase
      span#lastnameError
    .form-group
      label(for='phonenumber') Phone Number:
      input#phonenumber(type='tel' name='phonenumber')
      span#phonenumberError
    .form-group
      label(for='email') Email:
      input#email(type='email' name='email')
      span#emailError
    .form-group
      label(for='sex') Sex:
      select#sex(name='sex')
        option(value='') Select
        option(value='male') Male
        option(value='female') Female
      span#qnameError
    //
      <div class="form-group">
      <label for="nin">NIN</label>
      <input type="text" name="ninname" id="nin" />
      <span  id="ninError"></span>
      </div>
    //
      <div class="form-group">
      <label for="carnumberplate">Car Number Plate:</label>
      <input type="text" id="carnumberplate" name="carnumberplate" />
      <span id="gnameError"></span>
      </div>
    .form-group
      label(for='password') Create Password:
      input#password(type='password' name='password')
      span#passwordError
    .form-group
      label(for='confirm-password') Confirm Password:
      input#confirm-password(type='password' name='confirm-password')
      span#cnameError
    .form-group
      button(type='submit' onsubmit='services.html') Sign Up
      input(type='button' value='Login')
script(src='/js/register-validation.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
