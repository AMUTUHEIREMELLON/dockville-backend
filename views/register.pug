doctype html
head
  title Sign Up Form
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' type='text/css' href='/css/register.css')
.container
  form#formId(name='register' action='/api/regregister' onsubmit='return Validate()' method='POST')
    h2 Sign Up Form
    .form-group
      label(for='firstname') Firstname:
      input#firstname(type='text' name='firstname')
      // all inputs should have names in lowercase
      span#firstnameError
    .form-group
      label(for='lastname') Lastname:
      input#lastname(type='text' name='lastname')
      // all inputs should have names in lowercase
      span#lastnameError
    .form-group
      label(for='phonenumber') Phone Number:
      input#phonenumber(type='tel' name='phonenumber')
      span#phonenumberError
    .form-group
      label(for='email') Email:
      input#email(type='email' name='email')
      span#emailError
    .form-group
      label(for='sex') Sex:
      select#sex(name='sex')
        option(value='') Select
        option(value='male') Male
        option(value='female') Female
      span#qnameError
    
    .form-group
      label(for='password') Create Password:
      input#password(type='password' name='password')
      span#passwordError
    .form-group
      label(for='confirm-password') Confirm Password:
      input#confirm-password(type='password' name='confirm-password')
      span#cnameError
    .form-group
      button(type='submit' onsubmit='services.html') Sign Up
      
script(src='/js/register-validation.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
