doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9' crossorigin='anonymous')
table.table
  thead.table-dark

    tr
      th(scope='col') Firstname
      th(scope='col') Lastname
      th(scope='col') Slot Number
      th(scope='col') Email 
      th(scope='col') Telephone  
      th(scope='col') Delete
      th(scope='col') Edit 
  tbody
  if bodas.length 
    each boda in bodas
      tr
        td #{boda.firstname}
        td #{boda.lastname}
        td #{boda.date}
        td #{boda.time}
        td #{boda.slotnumber}
        td #{boda.nin}
        td 
            form(action="/api/boda/delete" method="POST")
              input(type="hidden", name="id", value=boda._id)
              button.btn.btn-danger(type="submit") Delete 
        td 
            a.btn.btn-warning(href="/api/boda/edit/"+boda._id) Edit
            //- a(href=`/api/boda/edit/${boda._id}`)

  else 
    p there are no bodas in the database
