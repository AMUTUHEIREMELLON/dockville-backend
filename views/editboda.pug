doctype html
head
  link(rel='stylesheet' href='/css/boda.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  title Booking Form
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
.booking
  h3 Bodaboda
  form#formId(name='boda' action='/api/regboda' onsubmit='return Validate()' method='POST')
    .row
      .col
        input#firstname.form-control(type='text' placeholder='First name' name='firstname' value=boda.firstname)
        span#firstnameError
      .col
        input#lastname.form-control(type='text' placeholder='Last name' aria-label='Last name' name='lastname' value=boda.lastname)
        span#lastnameError
    .date
      span#dateError
      label#ingroupsizing.date Date
      input#date.form-control(type='date' name='date' value=boda.date)
    .time
      span#timeError
      label#ingroup.color Time of arrival
      input#time.form-control(type='time' name='time' value=boda.time)
    .slot
      span#slotnumberError
      label#slot-sizing.date Slot Number
      input#slotnumber.form-control(type='number' name='slotnumber' value=boda.slotnumber)
    .slot
      span#ninError
      label#slot-sizing.nin NIN
      input#nin.form-control(type='nin' name='nin' value=boda.nin)
    button(type='submit' onsubmit='services.html') Sign Up
  script(src='/js/boda.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
