doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/clinic.css')
  title Document
.clinic
  form#formId(name='car' action='/api/regclinic' onsubmit='return Validate()' method='POST')
    .row
      .col
        input#firstname.form-control(type='text' placeholder='First name' name='firstname')
        span#firstnameError
      .col
        input#lastname.form-control(type='text' placeholder='Last name' aria-label='Last name' name='lastname')
        span#lastnameError
    .model
      label#inputGroup-sizing-sm.model(for='model') Car Model
      span#modelError
      input#model.form-control(type='text' name='model')
    .col-md-6
    label.form-label(for='duration') Duration
    select(name='duration')  
      option(value='') Select Duration
      option(value='day') Day 
      option(value='jinja') Jinja 
      option(value='mukono') Mukono
    //- Car tire services
    
        //- | Tire pressure(Shs.500)
    
        //- | Punctuure fixing(Shs.5000)
    .form-check
      input#flexCheck.form-check-input(type='checkbox' )
      label.form-check-label(for='flexCheck')
        | Valves(Shs.5000)
    button(type='submit' onsubmit='services.html') Sign Up
    script(src='/js/clinic.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
