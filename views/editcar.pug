doctype html
head
  link(rel='stylesheet' href='/css/bootstrap.css')
  link(rel='stylesheet' href='/css/car.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  title Booking Form
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')

.booking
  h3 Personal cars
  form#formId(name='car' action='/api/regcar/edit?id='+car._id onsubmit='return Validate()' method='POST')
    .row
      .col
        input#firstname.form-control(type='text' placeholder='First name' name='firstname' value=car.firstname)
        span#firstnameError
      .col
        input#lastname.form-control(type='text' placeholder='Last name' aria-label='Last name' name='lastname' value=car.lastname)
        span#lastnameError
    .model
      label#inputGroup-sizing-sm.model(for='model') Car Model
      span#modelError
      input#model.form-control(type='text' name='model' value=car.model)
    .car-number
      span#numberPlateError
      label#ingroup-sizing.p-(for='numberplate') Car Number Plate
      input#numberplate.form-control(type='text' name='numberplate' value=car.numberplate)
    .car-color
      span#colorError
      label#ingroup-sizing.p- Car Color
      input#color.form-control(type='text' name='color' value=car.color)
    .date
      span#dateError
      label#ingroupsizing.date Date
      input#date.form-control(type='date' name='date' value=car.date)
    .time
      span#timeError
      label#ingroup.color Time of arrival
      input#time.form-control(type='time' name='time' value=car.time)
    .slot
      span#slotnumberError
      label#slot-sizing.date Slot Number
      input#slotnumber.form-control(type='number' name='slotnumber' value=car.slotnumber)
    button(type='submit' onsubmit='services.html') Sign Up
  script(src='/js/car.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
