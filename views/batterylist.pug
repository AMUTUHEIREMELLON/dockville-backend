doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9' crossorigin='anonymous')
table.table
  thead.table-dark
    h1 This is the total number of batterys: #{batteryCount}
    tr
      th(scope='col') Firstname
      th(scope='col') Lastname
      th(scope='col') telephone
      th(scope='col') Date 
      th(scope='col') Time
      th(scope='col') Model
      th(scope='col') Battery size
      th(scope='col') Cost
      th(scope='col') Delete
      th(scope='col') Edit 
  tbody
  if batterys.length 
    each battery in batterys
      tr
        td #{battery.firstname}
        td #{battery.lastname}
        td #{battery.telephone}
        td #{battery.date}
        td #{battery.time}
        td #{battery.size}
        td #{battery.cost}
        td 
            form(action="/api/battery/delete" method="POST")
              input(type="hidden", name="id", value=battery._id)
              button.btn.btn-danger(type="submit") Delete 
        td 
            a.btn.btn-warning(href="/api/battery/edit/"+battery._id) Edit
            //- a(href=`/api/battery/edit/${battery._id}`)

  else 
    p there are no batterys in the database
