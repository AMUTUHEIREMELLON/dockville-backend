doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9' crossorigin='anonymous')
  table.table
    thead.table-dark

      tr
        th(scope='col') Email
        th(scope='col') Password
        th(scope='col') Delete
        th(scope='col') Edit 
    tbody
    if logins.length 
      each login in logins
        tr
        td #{login.email}  
        td #{login.password}
          td 
              form(action="/api/login/delete" method="POST")
                input(type="hidden", name="id", value=login._id)
                button.btn.btn-danger(type="submit") Delete 
          td 
              a.btn.btn-warning(href="/api/login/edit/"+login._id) Edit
              //- a(href=`/api/login/edit/${login._id}`)

    else 
      p there are no logins in the database
